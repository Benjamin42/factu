<%= render :template => 'commons/_header' %>

<h3>Liste des Produits</h3>

<div class="center">
	<%= link_to 'Nouveau Produit', new_produit_path, class:"btn btn-primary" %>
</div>
<br />

<table class="table" >
	<tr>
		<th>Label</th>
		<th>Commentaire</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @produits.each do |produit| %>
	<tr>
		<td><%= produit.label %></td>
		<td><%= produit.commentaire %></td>
		<td><%= link_to 'Afficher', produit, class:"btn btn-info" %></td>
		<td><%= link_to 'Editer', edit_produit_path(produit), class:"btn btn-warning" %></td>
		<td>
			<% if produit.countRef == 0 %>
				<%= link_to 'Supprimer', produit, confirm: 'Etes vous sur ?', method: :delete, class:"btn btn-danger" %></td>
			<%end%>			
		</td>	
	</tr>
	<% end %>
</table>

<br /><p></p>

