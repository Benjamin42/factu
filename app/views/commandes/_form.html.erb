<%= simple_form_for @commande, :html => {:class => "form-horizontal"} do |f| %>
<% if notification = f.error_notification %>
<div class="alert alert-error fade in">
	<a class="close" data-dismiss="alert" href="#">&times;</a>
	<%= notification %>
</div>
<% end %>

<!-- Numéro de facture -->
<%= f.input :num_factu, :label => "Numéro de Facture" %>

<!-- Bon de livraison -->
<%= f.input :bdl_id, :label => "Bon de Livraison" %>

<!-- Client -->
<%= f.association :client, :label => "Client", :collection => Client.all, :prompt => "Choisissez un client",
  :key => :id , :label_method => :form_title %>

<!-- Nombre d'etiquette -->
<%= f.input :nb_etiquette, :label => "Nombre d'étiquettes" %>

<!-- Date de livraison -->
<div class="control-group">
	<label class="checkbox inline" >
		<%= f.input :is_livraison, :label => 'Livrée' %>
	</label>
	<%= f.text_field :date_livraison, :class => "datepicker hidden" %>

</div>

<!-- Date de paiement -->
<div class="control-group">
	<label class="checkbox inline" >
		<%= f.input :is_paiement, :label => 'Payée' %>
	</label>
	<%= f.text_field :date_paiement, :class => "datepicker hidden" %>

</div>

<table class="table">
	<tr>
		<th>Produit</th>
		<th>Quantité</th>
		<th>Cadeau</th>
	</tr>
	<% for comProduit in @commande.commande_produit %>
	
		<%= fields_for "commande[commande_produit_attributes][]", comProduit do |comProduit_form| %>
		<tr>
			<td><%= comProduit.produit.label %> : </td>
			<td><%= comProduit_form.text_field :qty %></td>
			<td><%= comProduit_form.text_field :qty_cadeau %></td>
			<td><%= comProduit_form.hidden_field :produit_id %></td>
		</tr>
		<% end %>
	<% end %>
</table>

<div class="form-actions">
	<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
	<i class="icon-ok icon-white"></i> Save
	<% end %>
</div>

<% end %>
