<%= render :template => 'commons/_header' %>

<p id="notice"><%= notice %></p>

<div class="well">
	<p>
	  <b>Client:</b>
	  <%= @bdl.client_id %>
	</p>
	
	<p>
	  <b>Label:</b>
	  <%= @bdl.label %>
	</p>
	
	<p>
	  <b>Num bdl:</b>
	  <%= @bdl.num_bdl %>
	</p>
	
	<p>
	  <b>Majoration:</b>
	  <%= @bdl.majoration %>
	</p>
	
	<p>
	  <b>Date bdl:</b>
	  <%= @bdl.date_bdl %>
	</p>
</div>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="span6">
			<h3>Produits :</h3>
			<table class="table ">
				<tr>
					<th>Produit</th>
					<th>Quantit√©</th>
					<th>Cadeau</th>
				</tr>
				
				<% for produitCommande in @bdl.commande_produit %>
					<tr>
						<td><%= produitCommande.produit.label %></td>
						<td><%= produitCommande.qty %></td>
						<td><%= produitCommande.qty_cadeau %></td>
					</tr>
				<%end%>
			</table>
		</div>
		<div class="span6">
			<h3>Services :</h3>				
			<table class="table" width="100%">
				<tr>
					<th>Service</th>
					<th>Montant</th>
				</tr>
				<% for produitService in @bdl.commande_service %>
					<tr>
						<td><%= produitService.service.label %></td>
						<td><%= produitService.montant %></td>
					</tr>
				<%end%>
			</table>	
		</div>
	</div>
</div>

<div class="center">
<%= link_to 'Back', bdls_path, class:"btn btn-inverse" %> |
<%= link_to 'Edit', edit_bdl_path(@bdl), class:"btn btn-warning" %>

</div>
