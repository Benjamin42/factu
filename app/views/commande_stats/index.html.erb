<%= render :template => 'commons/_header' %>

<h1>Statistique commandes</h1>

<br />

<script type="text/javascript" charset="utf-8">
$(function () {
  new Highcharts.Chart({
    chart: { renderTo: 'orders_chart' },
    title: { text: 'Orders by Day' },
    xAxis: { type: 'datetime' },
    yAxis: {
      title: { text: 'Dollars' }
    },
    series: [
      <% { "Commandes" => Commande}.each do |name, commande| %>
    {
      name: "<%= name %>",
      pointInterval: <%= 1.month * 1000 %>,
      pointStart: <%= 10.months.ago.at_midnight.to_i * 1000 %>,
      data: <%= commandes_chart_series(commande, 3.months.ago) %>
    },
    <% end %>]
  });
});
</script>

<div id="orders_chart" style="width: 560px; height: 300px;"></div>
